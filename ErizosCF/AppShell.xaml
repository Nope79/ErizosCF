<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ErizosCF.Views"
    x:Class="ErizosCF.AppShell">

    <FlyoutItem Title="Dashboard">
        <ShellContent ContentTemplate="{DataTemplate views:DashBoardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Alumnos">
        <ShellContent ContentTemplate="{DataTemplate views:AlumnosPage}" />
    </FlyoutItem>

    <FlyoutItem Title="AlumnosDetalle">
        <ShellContent ContentTemplate="{DataTemplate views:AlumnoDetallePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Comparativa">
        <ShellContent ContentTemplate="{DataTemplate views:ComparativaPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Configuracion">
        <ShellContent ContentTemplate="{DataTemplate views:ConfiguracionPage}" />
    </FlyoutItem>
</Shell>
