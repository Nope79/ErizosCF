<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErizosCF.Views.ConfiguracionPage"
             xmlns:viewmodels="clr-namespace:ErizosCF.ViewModels"
             x:DataType="viewmodels:ConfiguracionViewModel"
             Title="ConfiguracionPage">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Opciones de la aplicación" FontSize="24" FontAttributes="Bold" />

        <HorizontalStackLayout>
            <Label Text="Tema oscuro" VerticalOptions="Center" />
            <Switch x:Name="SwitchTema" Toggled="OnTemaToggled" HorizontalOptions="EndAndExpand" />
        </HorizontalStackLayout>

        <Label Text="Últimos N contests para estadísticas" />
        <Entry x:Name="EntryUltimosContests" Keyboard="Numeric" Placeholder="Ej. 5" />

        <Button Text="Guardar configuración" Clicked="OnGuardarConfiguracion" />

        <Label Text="{Binding N, StringFormat='Numero para N: {0}'}" FontSize="18"/>

    </VerticalStackLayout>

</ContentPage>